; ===========================================================
; POST-PROCESSING VISUALIZATION
; Loads completed case and generates contour plots
; ===========================================================

/file/read-case-data "CASE_FILE"

; ----- Velocity Magnitude Contour -----
/display/contour velocity-magnitude
/display/save-picture "OUTPUT_DIR/contour_velocity_magnitude.png"

; ----- Pressure Contour -----
/display/contour pressure
/display/save-picture "OUTPUT_DIR/contour_pressure.png"

; ----- X-Velocity Contour -----
/display/contour x-velocity
/display/save-picture "OUTPUT_DIR/contour_x_velocity.png"

; ----- Y-Velocity Contour -----
/display/contour y-velocity
/display/save-picture "OUTPUT_DIR/contour_y_velocity.png"

; ----- Vorticity Contour -----
/display/contour vorticity
/display/save-picture "OUTPUT_DIR/contour_vorticity.png"

; ----- Stream Function (if available) -----
/display/contour stream-function
/display/save-picture "OUTPUT_DIR/contour_stream_function.png"

/exit yes
